@model Product

<div class="col mb-5">
    <div class="card h-100">
        <!-- Sale badge-->
        <div class="badge position-absolute" style="top: 0.5rem; right: 0.5rem"></div>

        <!-- Favorilere ekleme formu -->
        <form asp-action="Add" asp-controller="Favorites" method="post">
            <input type="hidden" name="ProductId" value="@Model.Id" />
            <button class="btn btn-transparent" type="submit" style="box-shadow: none">
                <i class="bi-heart"></i>
            </button>
        </form>

        <!-- Product image-->
        <a href="/Products/Details/@Model.Id">
            <img class="card-img-top" src="~/Img/Products/@Model.Image" alt="@Model.Name" />
        </a>

        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                
                <h5 class="fw-bolder">@Model.Name</h5>
                @Model.Price.ToString("c")
            </div>
        </div>

        <!-- Sepete ekleme formu -->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center">
                <form asp-controller="Cart" asp-action="Add" method="post">
                    <input type="hidden" name="ProductId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button class="btn btn-outline-dark mt-auto" type="submit"><i class="bi-cart-fill me-1"></i>Sepete Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

    